###############################################################################
### REQUIRED ENVIRONMENT VARIABLES                                          ###
### Copy this file to .env and fill in your values                          ###
###############################################################################

# Ethereum private key (Sepolia testnet - without 0x prefix)
CRE_ETH_PRIVATE_KEY=your_private_key_here

# CRE target
# - staging-sepolia-public: recommended demo default (public Sepolia)
# - staging-settings: Tenderly VNet (optional)
# - staging-private-payout: experimental privacy output flow (commitment + confidential relay)
CRE_TARGET=staging-sepolia-public

# Sepolia-compatible chain id (Tenderly VNet keeps 11155111)
ETH_CHAIN_ID=11155111

# Public Sepolia RPC (recommended default for writes + CRE demo)
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Optional Tenderly RPC (keep for observability / fallback)
# SEPOLIA_RPC_URL_TENDERLY=https://virtual.sepolia.eu.rpc.tenderly.co/e2f0da8b-1a20-49fd-8e7c-ac48c542cdce
NEXT_PUBLIC_TENDERLY_DASHBOARD_URL=https://dashboard.tenderly.co/andrw/project/testnet/0f6beb97-e65d-42a6-aaba-eba8ab7066e9
# Default mode for public Sepolia demo. Use tenderly_strict only when running full Tenderly flow.
NEXT_PUBLIC_RPC_MODE=fallback
NEXT_PUBLIC_TX_WARN_AFTER_MS=25000
NEXT_PUBLIC_TX_CONFIRM_TIMEOUT_MS=90000
NEXT_PUBLIC_CREATE_MARKET_GAS_LIMIT=350000
# Keep <= 10000 for public RPC providers with log-range limits
NEXT_PUBLIC_TRACE_WINDOW_BLOCKS=10000

# Gemini API Key (requires Google Cloud billing enabled)
# Get yours at: https://aistudio.google.com/apikey
GEMINI_API_KEY_VAR=your_gemini_api_key_here

# Flight provider API key for Confidential HTTP capability (CRE workflow)
FLIGHT_API_KEY_VAR=your_flight_provider_api_key_here
# Optional if using external flight provider through confidential HTTP
FLIGHT_API_BASE_URL=https://api.flight-provider.com
FLIGHT_CONFIDENTIAL_HTTP_ENABLED=1

# Optional: API key for FairLease state sync endpoint (Bearer token)
# If backend auth is enabled, this value must match FAIRLEASE_SYNC_API_KEY in alojamientos backend.
STATE_SYNC_API_KEY_VAR=local-dev-sync-token

# Required by current secrets mapping (even in staging-sepolia-public):
PRIVATE_PAYOUT_RELAY_TOKEN_VAR=local-dev-private-relay-token

# World ID (Proof of Humanity) - frontend + verification API
# Keep disabled for current demo stabilization; enable in phase 2.
NEXT_PUBLIC_WORLD_ID_ENABLED=0
NEXT_PUBLIC_WORLD_ID_APP_ID=app_staging_xxx
NEXT_PUBLIC_WORLD_ID_ACTION_CREATE=fairlease-create-policy-v1
NEXT_PUBLIC_WORLD_ID_ACTION_CLAIM=fairlease-claim-flight-v1
NEXT_PUBLIC_WORLD_ID_CREATE_MIN_LEVEL=device
NEXT_PUBLIC_WORLD_ID_CLAIM_MIN_LEVEL=orb
WORLD_ID_VERIFY_ENDPOINT=https://developer.worldcoin.org/api/v2/verify
WORLD_ID_DEV_BYPASS=0

# Optional: override oracle base URL for Gemini (local or Render)
ORACLE_BASE_URL=http://127.0.0.1:3001

# Optional frontend flags (safety defaults for demo)
NEXT_PUBLIC_ORACLE_BASE_URL=http://127.0.0.1:3001
NEXT_PUBLIC_ENABLE_ADMIN_TOOLS=0
NEXT_PUBLIC_SHOW_EXPERIMENTAL=0
